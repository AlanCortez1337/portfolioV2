    <style>
      body {
        height: calc(100vh - 76px);
      }
      svg {
        position: absolute;
        width: 100%;
      }
      header {
        position: relative;
        padding: 35px 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--green2);
        border-bottom: 8px solid black;
      }
      header h1 {
        position: relative;
        font-size: 120px;
        z-index: 2;
      }
      .header-wave {
        z-index: 1;
        top: 0;
        --start-bot-pos: -55px;
        --end-bot-pos: 0px;
        animation: top-bounce 10500ms infinite ease-in-out;
      }
      main {
        height: calc(100vh - 270px);
        display: grid;
        grid-template-columns: repeat(3, 1fr);
      }
      section {
        height: 100%;
        overflow: hidden;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1em;
      }
      h2 {
        position: relative;
        z-index: 2;
        font-size: 11vh;
        -webkit-text-stroke: 3px black;
        text-shadow: 6px 6px black;
        animation: slide 4500ms infinite linear;
        color: var(--text-highlight);
      }
      h2:nth-child(odd) {
        color: var(--text-color);
        animation: slide 4500ms infinite reverse;
      }
      .linkedin {
        background-color: var(--green3);
        border-right: 8px solid black;
      }
      .linkedIn-wave {
        z-index: 3;
        bottom: -100%;
        transition: all 750ms ease-in-out;
      }
      .linkedin:hover .linkedIn-wave{
        bottom: 0;
      }
      .github {
        background-color: var(--purple3);
        border-right: 8px solid black;
      }
      .github-wave {
        z-index: 3;
        bottom: -100%;
        transition: all 750ms ease-in-out;
      }
      .github:hover .github-wave{
        bottom: 0;
      }
      .email {
        background-color: var(--purple1);
      }
      .email-wave {
        z-index: 3;
        bottom: -100%;
        transition: all 750ms ease-in-out;
      }
      .email:hover .email-wave{
        bottom: 0;
      }
      .icon {
        transform: translate(calc(50% - 110px), 25%) scale(0.8, 0.8);
      }
      .bg-star {
        width: 125%;
        position: absolute;
        z-index: 0;
        bottom: -50%;
        left: -50%;
        --rotate-start: 0deg;
        --rotate-end: 360deg;
        animation: spin 14500ms infinite linear;
      }
      .bg-box {
        width: 85%;
        position: absolute;
        z-index: 0;
        --rotate-start: 360deg;
        --rotate-end: 0deg;
        animation: spin 14500ms infinite linear;
      }
      .bg-pentagon {
        width: 125%;
        position: absolute;
        z-index: 0;
        top: -50%;
        right: -50%;
        --rotate-start: 0deg;
        --rotate-end: 360deg;
        animation: spin 14500ms infinite linear;
      }
      /* animations */
      
      @keyframes slide {
        0% {
            transform: translateX(10%);
        }
        50% {
            transform: translateX(-10%);
        }
        100% {
            transform: translateX(10%);
        }
      }
    </style>
